#include <iostream>
#include <stdlib.h>
#include <conio.h>

using namespace std;

int main() 
{
	bool gameover = false;
	char direction;
	int Xpos = 0;
	int Ypos = 0;
	while(gameover == false)
	{
		direction=_getch;
		system("cls");
		switch(direction)
		{
			case 'w':
			if(Ypos!=0)
			{
				Ypos--;
			}
			break;
			case 'a':
			if(Xpos!=0)
			{
				Xpos--;
			}
			break;
			case 's':
			Ypos++;
			break;
			case 'd':
			Xpos++;
			break;
			default:
			cin >> direction;
		}
		for(int i = 0; i<=Ypos; i++)
		{
			for(int j=0; j<=Xpos; j++)
			{
				if(j==Xpos && i==Ypos)
				{
					cout << "0";
				}
				else
				{
					cout << " ";
				}

			}
			cout << endl;
		}
	}
}
