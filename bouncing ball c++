#include <iostream>
#include <stdlib.h>
#include <windows.h>

using namespace std;

int main()
{
    for(int y=0; y<10; y++)
    {
        system("cls");
        for(int c=0; c<=y; c++)
        {
            cout << " ";
        }
        cout << "0";
        Sleep(100);
    }
    for(int x=9; x>0; x--)
    {
        system("cls");
        for(int d=0; d<x; d++)
        {
            cout << " ";
        }
        cout << "0";
        Sleep(100);
    }
    system("cls");
    cout << "0";
    return 0;
}
