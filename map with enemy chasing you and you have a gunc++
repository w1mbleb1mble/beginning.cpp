#include <iostream>
#include <stdlib.h>
#include <conio.h>
#include <windows.h>

int main()
{
    enum eDirection{stop=0, uup, ddown, lleft, rright,};
    eDirection direction;
    int frames = 0;
	bool gameover = false;
	char input;
	enum eFacing{up, down, left, right};
	eFacing facing = down;
	int Xpos = 1;
	int Ypos = 1;
	int enXpos = 10;
	int enYpos = 10;
	int Xmax = 20;
	int Ymax = 20;
	int gunX;
	int gunY;
	bool gunisfired = false;
	enum eGunD{gUp, gDown, gLeft, gRight};
	eGunD gundirection;
	while(gameover == false)
	{
		system("cls");
		if(frames%10==0)
        {
            if(enXpos>Xpos&&enXpos<Xmax)
            {
                enXpos--;
            }
            if(enYpos>Ypos&&enYpos<Ymax)
            {
                enYpos--;
            }
            if(enXpos<Xpos&&enXpos>0)
            {
                enXpos++;
            }
            if(enYpos<Ypos&&enYpos>0)
            {
                enYpos++;
            }

        }
		if(input!='w' || input!='s' || input!='a' || input!='d')
        {
            direction = stop;
        }
		if(input == 'w')
        {
            direction = uup;
        }
        if(input == 'a')
        {
            direction = lleft;
        }
        if(input == 's')
        {
            direction = ddown;
        }
        if(input == 'd')
        {
            direction = rright;
        }
        if(input == ' ' && gunisfired == false)
        {
            gunisfired = true;
            if(facing==up)
            {
                gundirection = gUp;
                gunX = Xpos;
                gunY = Ypos-1;
            }
            if(facing==down)
            {
                gundirection = gDown;
                gunX = Xpos;
                gunY = Ypos+1;
            }
            if(facing==left)
            {
                gundirection = gLeft;
                gunY = Ypos;
                gunX = Xpos-1;
            }
            if(facing==right)
            {
                gundirection = gRight;
                gunY = Ypos;
                gunX = Xpos+1;
            }
        }
        switch(direction)
        {
        case uup:
            if(Ypos!=1)
            {
                Ypos--;
            }
            facing = up;
            break;
        case ddown:
            if(Ypos!=Ymax-1)
            {
                Ypos++;
            }
            facing = down;
            break;
        case lleft:
            if(Xpos!=1)
            {
                Xpos--;
            }
            facing = left;
            break;
        case rright:
            if(Xpos!=Xmax-1)
            {
                Xpos++;
            }
            facing = right;
        case stop:
            break;
        }
        if(frames%2==0)
        {
            if(gunisfired==true)
            {

                switch(gundirection)
                {
                case gUp:
                    gunY--;
                    break;
                case gDown:
                    gunY++;
                    break;
                case gLeft:
                    gunX--;
                    break;
                case gRight:
                    gunX++;
                    break;
                }
            }
        }
		for(int i = 0; i<=Ymax; i++)
		{
			for(int j=0; j<=Xmax; j++)
			{
			    if(i==Ymax || i==0 || j==Xmax || j==0)
                {
                    std::cout << "#";
                }
				else
                {
                    if(j==Xpos && i==Ypos)
                    {
                        if(facing==up)
                        {
                            std::cout << "^";
                        }
                        if(facing==down)
                        {
                            std::cout << "v";
                        }
                        if(facing==left)
                        {
                            std::cout << "<";
                        }
                        if(facing==right)
                        {
                            std::cout << ">";
                        }
                    }
                    else
                    {
                        if(j==enXpos && i==enYpos)
                        {
                            std::cout << "X";
                        }
                        else
                        {
                            if(j==gunX && i==gunY)
                            {
                                std::cout << "*";
                            }
                            else
                            {
                                std::cout << " ";
                            }
                        }
                    }
                }
			}
			std::cout << std::endl;
		}
		input = '|';
		if(kbhit())
        {
            input = _getch();
        }
        frames++;
        if(frames>1000000)
        {
            frames=1;
        }
        if(enXpos==gunX && enYpos==gunY)
        {
            enXpos = -1;
            enYpos = -1;
        }
        if(gunX>=Xmax || gunY>=Ymax || gunX<=0 || gunY<=0)
        {
            gunisfired = false;
        }
        if(Xpos==enXpos && Ypos==enYpos)
        {
            gameover = true;
        }
        std::cout << frames;
	}
	while(gameover==true)
    {
        system("cls");
        std::cout << "Game Over \n press any key to try again" << std::endl;
        if(kbhit())
        {
            main();
        }
    }
}
