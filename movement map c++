#include <iostream>
#include <stdlib.h>
#include <conio.h>

using namespace std;

int main()
{
	bool gameover = false;
	char direction;
	enum eFacing{up, down, left, right};
	eFacing facing = up;
	int Xpos = 1;
	int Ypos = 1;
	int Xmax = 20;
	int Ymax = 20;
	while(gameover == false)
	{
		direction = _getch();
		system("cls");
		if(direction == 'w')
        {
            if(Ypos!=1)
            {
                Ypos--;
            }
            facing = up;
        }
        if(direction == 'a')
        {
            if(Xpos!=1)
            {
                Xpos--;
            }
            facing = left;
        }
        if(direction == 's')
        {
            if(Ypos!=Ymax-1)
            {
                Ypos++;
            }
            facing = down;
        }
        if(direction == 'd')
        {
            if(Xpos!=Xmax-1)
            {
                Xpos++;
            }
            facing = right;
        }
		for(int i = 0; i<=Ymax; i++)
		{
			for(int j=0; j<=Xmax; j++)
			{
			    if(i==Ymax || i==0 || j==Xmax || j==0)
                {
                    cout << "#";
                }
				else
                {
                    if(j==Xpos && i==Ypos)
                    {
                        if(facing==up)
                        {
                            cout << "^";
                        }
                        if(facing==down)
                        {
                            cout << "v";
                        }
                        if(facing==left)
                        {
                            cout << "<";
                        }
                        if(facing==right)
                        {
                            cout << ">";
                        }
                    }
                    else
                    {
                        cout << " ";
                    }
                }

			}
			cout << endl;
		}
	}
}
